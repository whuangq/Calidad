
<!DOCTYPE html>
@model camino.Models.TrayectoCaminanteModel

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ParticipacionProvisional</title>
    <link href="~/Styles/header.css" rel="stylesheet" />
    <link href="~/Styles/form.css" rel="stylesheet" />
</head>
<body>
    <div class="banner-area">
        <h2 style="color:white;">Buscar un caminante por correo</h2>
    </div>

    <div class="container" style="margin-top:50px">
        @using (@Html.BeginForm("VerParticipacion", "TrayectoCaminante", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {@Html.AntiForgeryToken()
        <form>
            <div>
                <div>
                    <label for="name">
                        Digite un correo de usuario
                    </label>
                    <div>
                        @Html.LabelFor(model => model.CaminanteCorreo) @Html.TextBoxFor(model => model.CaminanteCorreo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CaminanteCorreo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div style="text-align:center; margin-top:15px">
                <input type="submit" value="Buscar" class="cta">
            </div>
        </form>
    }
    </div>

</body>
</html>