<!DOCTYPE html>

@model camino.Models.PreguntaModel
@{
    ViewBag.Title = "Formulario para editar una pregunta de la encuesta";
}

<html>
<head>
    <h1 align="center" style="color:black; font-family:Agrozza Demo;">Formulario para editar una pregunta de la encuesta</h1>
    <link href="~/Styles/Table.css" rel="stylesheet" />

    <link href="~/Styles/form.css" rel="stylesheet" />
</head>

<body>
    <div class="banner-area">
        <h2 style="color:white;">Crear pregunta</h2>
    </div>

    @if (ViewBag.Message != null)
    {
        if (ViewBag.ExitoAlCrear)
        {
            <div class="alert-success">
                <h3> @ViewBag.Message </h3>
            </div>
            <input type="button" class="cta" align="center" onclick="location.href='/Evaluaciones/listadodeEvaluaciones';" value="Regresar" />
        }
        else
        {
            <div class="alert-danger">
                <h3> @ViewBag.Message </h3>
            </div>
            <input type="button" class="cta" align="center" onclick="location.href='/Evaluaciones/listadodeEvaluaciones';" value="Regresar" />
        }
    }
    else
    {
        <div class="container" style="margin-top:50px;">
            @using (Html.BeginForm("editarPregunta", "Pregunta", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {@Html.AntiForgeryToken()
            <form>
                <div>
                    <div>
                        @Html.Hidden("preguntaId", (object)ViewBag.preguntaId)
                        @Html.Hidden("encuestaId", (object)ViewBag.encuestaId)
                        <label for="name">
                            Ingrese la pregunta editada
                        </label>
                        @Html.TextBoxFor(model => model.texto, new { @placeholder = "Pregunta", @class = "inputFields" })
                        @Html.ValidationMessageFor(model => model.texto, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div style="text-align:center; margin-top:15px">
                    <input type="submit" value="Aceptar" class="cta">
                </div>
            </form>
            }
        </div>
    }
</body>
</html>
