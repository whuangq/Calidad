
 @{
        //Layout = "~/Views/Shared/_Layout.cshtml";
 }

    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Styles/Table.css" rel="stylesheet" />    

        <style>
            h3 {
                margin: 0;
                text-align: center;
                font-size: 25px;
                font-weight: 500;
                padding: 50px;
            }
        </style>
    </head>
    
    <body>
        <div class="banner-area">
            <h2 style="color:white;">Agregar caminante a trayectos</h2>
        </div>

        <div>
            <h3> Usuario: @ViewBag.caminante.nombre @ViewBag.caminante.apellido @ViewBag.caminante.email</h3>
        </div>

        <div class="container">
            <h1> </h1>
            <ul class="responsive-table">
                @foreach (var trayecto in ViewBag.Trayectos)
                {
                <li class="table-row">
          
                    <div class="col col-2">
                        @trayecto.Descripcion
                    </div>
                    <div class="col col-2">
                        @Html.ActionLink("Enlistar", "Enlistar", "TrayectoCaminante",
                       new { email = ViewBag.caminante.email, TrayectoTrayectoID = trayecto.TrayectoID }, new {@class = "cta" })
                    </div>
                </li>
                }
                </ul>
        </div>
    </body>
</html>
