<!DOCTYPE html>

@model camino.Models.SitiosInteresModel
@{
    ViewBag.Title = "Agregar Sitio de Interes";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<html>
<head>
    <link href="~/Styles/form.css" rel="stylesheet" />
</head>
<body>
    <div class="banner-area">
        <h2 style="color:white;">Agregar Sitio de Interes </h2>
    </div>

    @if (ViewBag.Message != null)
    {
        if (ViewBag.ExitoAlCrear)
        {
            <div class="alert-success">
                <h3> @ViewBag.Message </h3>
            </div>
        }
        else
        {
            <div class="alert-danger">
                <h3> @ViewBag.Message </h3>
            </div>
        }
    }

            <div class="container" style="margin-top:50px;">
                @using (Html.BeginForm("crearSitio", "SitiosInteres", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {@Html.AntiForgeryToken()
                    <form>
                        
                            <div>
                                <div><label for="fname">Nombre</label></div>
                                @Html.TextBoxFor(model => model.sitioNombre, new { @placeholder = "Nombre del sitio", @class = "inputFields" })
                                @Html.ValidationMessageFor(model => model.sitioNombre, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <div><label for="fname">Provincia</label></div>
                                @Html.TextBoxFor(model => model.provincia, new { @placeholder = "Provincia", @class = "inputFields" })
                                @Html.ValidationMessageFor(model => model.provincia, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <div><label for="fname">Cantón</label></div>
                                @Html.TextBoxFor(model => model.canton, new { @placeholder = "Canton", @class = "inputFields" })
                                @Html.ValidationMessageFor(model => model.canton, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <div><label for="fname">Descripción</label></div>
                                @Html.TextBoxFor(model => model.descripcion, new { @placeholder = "Descripcion", @class = "inputFields" })
                                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                            </div>
                           <div >
            @Html.TextBoxFor(model => model.FotoUno, new { type = "file", @class = "btn btn alert-info" })
            @Html.ValidationMessageFor(model => model.FotoUno, "", new { @class = "text-danger" })
        </div>
                            <div class="center" style="text-align: center">
                                <input type="submit" value="Agregar" class="cta">
                            </div>
                        
                    </form>
                }

            </div>


  

</body>
@section Scripts { @Scripts.Render("~/bundles/jqueryval") }
</html>